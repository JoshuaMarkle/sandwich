{
	"name": "UVA Dashboard",
	"description": "Fetch assignments from Gradescope and Canvas.",
	"version": "1.0",
	"manifest_version": 2,
	"permissions": ["storage", "alarms", "activeTab", "tabs", "scripting", "webRequest"],
	"background": {
		"scripts": ["background.js"]
	},
	"content_scripts": [
		{
			"matches": ["https://canvas.its.virginia.edu/*"],
			"js": ["content.js"],
			"run_at": "document_start"
		}
	],
	"browser_action": {
		"default_popup": "popup.html"
	},
	"browser_specific_settings": {
		"gecko": {
			"id": "dashboard@joshuamarkle.com"
		}
	}
}
