{
	"manifest_version": 3,
	"name": "UVA Dashboard",
	"description": "Fetch canvas and gradescope assignments.",
	"version": "1.0",
	"permissions": ["storage", "alarms", "activeTab", "tabs", "scripting", "webRequest"],
	"host_permissions": [
		"https://www.gradescope.com/*"
	],
	"background": {
		"scripts": ["scripts/background.js"],
		"type": "module"
	},
	"content_scripts": [
		{
			"matches": ["https://canvas.its.virginia.edu/*"],
			"js": ["scripts/content.js"],
			"run_at": "document_start"
		}
	],
	"options_page": "dashboard.html",
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icons/icon16.png",
			"32": "icons/icon32.png",
			"64": "icons/icon64.png",
			"128": "icons/icon128.png"
		}
	}
}
